{
    "env": {
        "es6": true,
        "browser": true
    },
    "extends": [
        "airbnb", 
        "airbnb/hooks",
        "plugin:react/recommended"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6
    },
    "rules": {
        "linebreak-style": 0,
        "no-underscore-dangle": 0,
        "react/destructuring-assignment": 0,
        "react/no-array-index-key": 0,
        "react/prop-types": 0,
        "eqeqeq": "off",
        "max-len": "off",
        "default-case": "off",
        "no-plusplus": "off",
        "no-param-reassign": "off",
        "no-else-return": "off"
    }
}