{
    "env": {
        "es6": true,
        "browser": true,
        "jest": true
    },
    "extends": [
        "airbnb", 
        "airbnb/hooks",
        "plugin:react/recommended"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
        "max-len": [2, 120, 4],
        "no-plusplus": [2, { "allowForLoopAfterthoughts": true }],
        "jsx-a11y/label-has-associated-control": 0
    }
}